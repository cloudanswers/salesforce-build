set -e
mkdir salesforce-ci
cd salesforce-ci
wget https://github.com/pmd/pmd/releases/download/pmd_releases%2F6.1.0/pmd-bin-6.1.0.zip
unzip pmd-bin-6.1.0.zip
curl https://raw.githubusercontent.com/pmd/pmd/master/pmd-apex/src/main/resources/rulesets/apex/ruleset.xml > ruleset.xml
./pmd-bin-6.1.0/bin/run.sh pmd -dir ../src -format text -language apex -rulesets ruleset.xml
ret=$?
cd ..
return $ret